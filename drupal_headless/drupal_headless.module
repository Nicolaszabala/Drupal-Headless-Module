<?php

/**
 * @file
 * Provides headless Drupal integration for modern frontend frameworks.
 */

use Drupal\Core\Entity\EntityInterface;
use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function drupal_headless_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.drupal_headless':
      $output = '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('The Drupal Headless Module simplifies the setup of headless Drupal installations for modern frontend frameworks like Next.js, React, and Astro.') . '</p>';
      $output .= '<h3>' . t('Features') . '</h3>';
      $output .= '<ul>';
      $output .= '<li>' . t('Auto-configuration of JSON:API and OAuth2 authentication') . '</li>';
      $output .= '<li>' . t('Simplified consumer management for frontend applications') . '</li>';
      $output .= '<li>' . t('Security best practices out of the box') . '</li>';
      $output .= '<li>' . t('Developer dashboard with API documentation') . '</li>';
      $output .= '</ul>';
      $output .= '<h3>' . t('Configuration') . '</h3>';
      $output .= '<p>' . t('Visit the <a href="@settings">settings page</a> to configure the module.', [
        '@settings' => \Drupal\Core\Url::fromRoute('drupal_headless.settings')->toString(),
      ]) . '</p>';
      return $output;
  }
}

/**
 * Implements hook_entity_insert().
 */
function drupal_headless_entity_insert(EntityInterface $entity) {
  drupal_headless_trigger_webhook($entity, 'create');
}

/**
 * Implements hook_entity_update().
 */
function drupal_headless_entity_update(EntityInterface $entity) {
  drupal_headless_trigger_webhook($entity, 'update');
}

/**
 * Implements hook_entity_delete().
 */
function drupal_headless_entity_delete(EntityInterface $entity) {
  drupal_headless_trigger_webhook($entity, 'delete');
}

/**
 * Triggers webhooks for entity changes.
 *
 * @param \Drupal\Core\Entity\EntityInterface $entity
 *   The entity.
 * @param string $event
 *   The event type (create, update, delete).
 */
function drupal_headless_trigger_webhook(EntityInterface $entity, $event) {
  // Only trigger webhooks for content entities.
  if (!$entity->getEntityType()->isRevisionable()) {
    return;
  }

  try {
    $webhook_manager = \Drupal::service('drupal_headless.webhook_manager');
    $webhook_manager->trigger($entity, $event);
  }
  catch (\Exception $e) {
    \Drupal::logger('drupal_headless')->error('Failed to trigger webhook: @error', [
      '@error' => $e->getMessage(),
    ]);
  }
}

/**
 * Implements hook_form_alter().
 */
function drupal_headless_form_alter(&$form, $form_state, $form_id) {
  // Add preview button to node edit forms.
  if (preg_match('/^node_(\w+)_form$/', $form_id, $matches) ||
      preg_match('/^node_(\w+)_edit_form$/', $form_id, $matches)) {
    drupal_headless_add_preview_button($form, $form_state);
  }
}

/**
 * Adds preview button to entity forms.
 *
 * @param array $form
 *   The form array.
 * @param \Drupal\Core\Form\FormStateInterface $form_state
 *   The form state.
 */
function drupal_headless_add_preview_button(array &$form, $form_state) {
  $entity = $form_state->getFormObject()->getEntity();

  // Only add preview button for existing entities.
  if ($entity->isNew()) {
    return;
  }

  $preview_manager = \Drupal::service('drupal_headless.preview_manager');
  $config = $preview_manager->getPreviewConfigurations();

  // Only add button if preview URL is configured.
  if (empty($config['default_url']) && empty($config['framework_urls'])) {
    return;
  }

  // Add preview button to actions.
  $form['actions']['preview'] = [
    '#type' => 'link',
    '#title' => t('Preview'),
    '#url' => \Drupal\Core\Url::fromRoute('drupal_headless.preview', [
      'entity_type_id' => $entity->getEntityTypeId(),
      'entity_id' => $entity->id(),
    ]),
    '#attributes' => [
      'class' => ['button', 'button--preview'],
      'target' => '_blank',
      'title' => t('Preview this content in your frontend application'),
    ],
    '#weight' => 10,
  ];

  // If multiple frameworks configured, add dropdown.
  if (!empty($config['framework_urls']) && count($config['framework_urls']) > 1) {
    $form['actions']['preview']['#type'] = 'container';
    $form['actions']['preview']['#attributes']['class'][] = 'preview-dropdown';

    foreach ($config['framework_urls'] as $framework => $url) {
      $form['actions']['preview'][$framework] = [
        '#type' => 'link',
        '#title' => t('Preview (@framework)', ['@framework' => ucfirst($framework)]),
        '#url' => \Drupal\Core\Url::fromRoute('drupal_headless.preview', [
          'entity_type_id' => $entity->getEntityTypeId(),
          'entity_id' => $entity->id(),
        ], ['query' => ['framework' => $framework]]),
        '#attributes' => [
          'class' => ['button', 'button--small'],
          'target' => '_blank',
        ],
      ];
    }
  }
}
